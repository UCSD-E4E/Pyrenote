{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": ["/src/wavesurfer.js"],
  "env": {
    "browser": true,
    "commonjs": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": "off",
    "react/no-array-index-key":"off",
    "react/jsx-curly-newline":"off",
    "no-plusplus":"off",
    "camelcase":"off",
    "no-underscore-dangle":"off",
    "class-methods-use-this":"off",

    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "semi": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "singleQuote": true
      }
    ],

    "no-console": "warn"
  }
}
